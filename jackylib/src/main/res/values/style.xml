<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="activity_page">
        <item name="android:splitMotionEvents">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/activity_bg</item>
        <item name="android:orientation">vertical</item>
        <!-- 状态栏沉浸 <<<<<<<<<<<<<<<<< -->
        <item name="android:clipToPadding">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- 状态栏沉浸 >>>>>>>>>>>>>>>>> -->
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="lv" parent="match_match">
        <item name="android:overScrollMode">never</item>
        <item name="android:listSelector">@color/alpha_3</item>
        <item name="android:divider">@color/alpha_3</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="lv_no_divider" parent="lv">
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="topbar_btn">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
        <item name="android:minWidth">@dimen/topbar_btn_min_width</item>
        <item name="android:background">@drawable/to_alpha</item>
    </style>


    <!-- ToolBar相关 !-->
    <style name="topbar_left_btn" parent="topbar_btn">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:text"></item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">onReturnClick</item>
    </style>

    <style name="topbar_return_tv" parent="topbar_left_btn">
        <item name="android:text">返回</item>
    </style>

    <style name="topbar_return_img" parent="topbar_left_btn">
        <item name="android:src">@drawable/ic_back_arrow</item>
    </style>

    <style name="topbar_bg">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
    </style>

    <style name="topbar_title">
        <item name="android:id">@id/tvBaseTitle</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <style name="PopupAnimaFade" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/basepopup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/basepopup_fade_out</item>
    </style>

</resources>